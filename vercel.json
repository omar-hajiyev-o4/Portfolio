{
  "version": 2,
  "builds": [
    { "src": "backend-nodejs/server.js", "use": "@vercel/node" },
    { "src": "frontend-react/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["GET", "POST", "OPTIONS"],
      "dest": "/backend-nodejs/server.js"
    },
    {
      "src": "/static/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000" }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-react/index.html",
      "continue": true
    }
  ]
}