{
  "version": 2,
  "builds": [
    {
      "src": "backend-nodejs/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "backend-nodejs/**/*"
        ]
      }
    },
    {
      "src": "frontend-react/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend-nodejs/server.js",
      "methods": [
        "GET",
        "POST",
        "OPTIONS"
      ]
    },
    {
      "src": "/static/(.*)",
      "dest": "frontend-react/build/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    {
      "src": "/_next/(.*)",
      "dest": "/frontend-react/build/_next/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-react/build/index.html",
      "status": 200
    }
  ]
}