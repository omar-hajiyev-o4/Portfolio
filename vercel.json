{
  "version": 2,
  "builds": [
    {
      "src": "backend-nodejs/server.js",
      "use": "@vercel/node",
      "config": { "includeFiles": ["backend-nodejs/**/*"] }
    },
    {
      "src": "frontend-react/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/email", 
      "dest": "/backend-nodejs/server.js"
    },
    {
      "src": "/api/subscription", 
      "dest": "/backend-nodejs/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend-react/$1",
      "continue": true
    }
  ]
}